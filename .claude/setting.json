{
    "permissions": {
        "allow": [
            "*"
        ],
        "deny": []
    },
    "enabledMcpjsonServers": [
        "playwright",
        "context7"
    ],
    "hooks": {
        "UserPromptSubmit": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/pre-tool-use.js"
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "Edit|Write|Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/pre-tool-use.js"
                    }
                ]
            }
        ],
        "Notification": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/play-sound.js notification"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/play-sound.js"
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Edit|Write|MultiEdit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/prettier-frontend.js"
                    },
                    {
                        "type": "command",
                        "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/play-sound.js done"
                    }
                ]
            }
        ]
    }
}